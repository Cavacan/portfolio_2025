<h1>アカウント作成</h1>

<%= form_with model:@user, url: registrations_path, local: true do |f| %>
  <div class="agree-terms">
    <div class="terms-container">
      <h3>利用規約・プライバシーポリシー</h3>
      <%= render "shared/terms" %>
    </div>

    <div class="agree-checkbox">
      <%= f.label :agree, class: "agree-label" do %>
        利用規約に同意して作成用メールを受け取る。
        <%= f.check_box :agree, required: true %>
      <% end %>
    </div>
  </div>

  <div class="d-flex">
    <div class="mt-3 me-3">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, size: '30' %>
    </div>
    <div class="mt-3">
      <%= f.submit 'メール送信', id: "submit-button", class: 'btn btn-success' %>
    </div>
  </div>
  <br><br>
  <div class="mt-3">
    <%= link_to 'ログイン画面に戻る', root_path, class: 'btn btn-primary' %>
  </div>
<% end %>

<br><br><br><br><br>
