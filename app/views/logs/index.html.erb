<h1>履歴・グラフ</h1>

<div class="container">
  <div class="mt-3 fs-5">
    <%= link_to 'トップページへ戻る', schedules_path, class: 'btn btn-primary' %>
  </div>
</div>

<div class="container">
  <h2 class="border-bottom mt-4">履歴</h2>
  <% @logs.each do |log| %>
    <table class="table mt-3">
      <thead>
        <tr>
          <th>id</th>
          <th>title</th>
          <th>通知日</th>
          <th>price</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= log.id %></td>
          <td><%= log.schedule.title %></td>
          <td><%= log.send_time.strftime("%Y/%-m/%-d") %></td>
          <td><%= log.price? ? log.price : "なし" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>

<br><br><br><br>

<% if @chart_data.present? %>
  <div class="container">
    <h2 class="border-bottom">グラフ</h2>
    <%= line_chart @chart_data, xtitle: "予定日", ytitle: "通知数" %>
  </div>
<% end %>
