<h1>新しいパスワードの設定</h1>
<div class="container">
  <%= form_with model: @user, url: password_reset_path(params[:id]),method: :patch do |f| %>
    <div class="mt-3">
      <%= f.label :password, "新しいパスワード" %>
      <%= f.password_field :password %>
    </div>
    
    <div class="mt-3">
      <%= f.label :password_confirmation, "確認用パスワード" %>
      <%= f.password_field :password_confirmation %>
    </div>
    
    <div class="mt-3">
      <%= f.submit "パスワード変更", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
