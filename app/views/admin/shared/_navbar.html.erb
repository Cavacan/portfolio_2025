<div class="p-2">
  <div class="navbar-admin d-flex justify-content-between align-items-start">
    <div class="d-flex gap-3">
      <%= link_to admin_dashboard_path, class: "nav-item-admin #{'active' if current_page?(admin_dashboard_path)}" do %>
        予定一覧
      <% end %>
  
      <%= link_to admin_logs_path, class: "nav-item-admin #{'active' if current_page?(admin_logs_path)}" do %>
        履歴
      <% end %>
  
      <%= link_to edit_admin_application_setting_path, class: "nav-item-admin #{'active' if current_page?(edit_admin_application_setting_path)}" do %>
        環境設定
      <% end %>
    </div>

    <div class="d-flex flex-column align-items-end">
      <div class="admin-user_name mb-2">
        <%= current_user.name.present? || current_user.email %>
